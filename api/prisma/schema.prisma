// user model =============================================================
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  roles     String[] @default(["User"])
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
